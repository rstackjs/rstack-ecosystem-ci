{
  "include": ["./**/*.ts"],
  "exclude": ["**/node_modules/**"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "resolveJsonModule": true,
    "sourceMap": true
  }
}
